<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crud.DetailDataActivity">

    <!-- Header dengan Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">
<!--        back-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_arrow_back_24"
                />
        </LinearLayout>
<!--        judul-->
        <TextView
            android:id="@+id/tv_tmbh_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/poppinssemibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Detail Produk"/>

<!--        card-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center"
                android:padding="20dp"
                android:background="@drawable/bg_auth"

                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/btn_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:background="@drawable/rounded_button_edit"
                        android:drawableStart="@drawable/baseline_edit_24"
                        android:padding="10dp"
                        android:layout_marginRight="10dp"

                        android:textColor="@color/white" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/delete"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button_delete"
                        android:drawableStart="@drawable/baseline_delete_24"
                        android:padding="8dp"
                        android:textColor="@color/white" />

                </LinearLayout>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo"/>
                <TextView
                    android:id="@+id/tv_label_namaproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="20dp"
                    android:text="Nama Produk"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Lorem Ipsum"/>
                <TextView
                    android:id="@+id/tv_label_kategoriproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="20dp"
                    android:text="Kategori Produk"/>
                <TextView
                    android:id="@+id/tv_kategoriproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Lorem Ipsum"/>
                <TextView
                    android:id="@+id/tv_label_hargaproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="20dp"
                    android:text="Harga Produk"/>

                <TextView
                    android:id="@+id/tv_hargaproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Lorem Ipsum"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_label_stokproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="20dp"
                    android:text="Stok Produk"/>
                <TextView
                    android:id="@+id/tv_stokproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Lorem Ipsum"/>
                <TextView
                    android:id="@+id/tv_label_ketproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginTop="20dp"
                    android:text="Keterangan Produk"/>
                <TextView
                    android:id="@+id/tv_ketproduk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Lorem Ipsum"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>